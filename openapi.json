{
    "openapi": "3.0.0",
    "info": {
        "title": "Agent Orcha API",
        "version": "0.0.3",
        "description": "API for orchestrating agents, workflows, knowledge stores, functions, MCP servers, and LLMs."
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Local Development Server"
        }
    ],
    "paths": {
        "/health": {
            "get": {
                "summary": "Health Check",
                "description": "Returns the status of the server.",
                "responses": {
                    "200": {
                        "description": "Server is healthy",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "ok"
                                        },
                                        "timestamp": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/agents": {
            "get": {
                "summary": "List Agents",
                "tags": ["Agents"],
                "responses": {
                    "200": {
                        "description": "List of available agents",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": { "type": "string" },
                                            "description": { "type": "string" },
                                            "version": { "type": "string" },
                                            "tools": { "type": "array", "items": { "type": "string" } },
                                            "inputVariables": { "type": "array", "items": { "type": "string" } }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/agents/{name}": {
            "get": {
                "summary": "Get Agent Details",
                "tags": ["Agents"],
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Agent details",
                        "content": {
                            "application/json": {
                                "schema": { "type": "object" }
                            }
                        }
                    },
                    "404": { "description": "Agent not found" }
                }
            }
        },
        "/api/agents/{name}/invoke": {
            "post": {
                "summary": "Invoke Agent",
                "tags": ["Agents"],
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "input": { "type": "object" },
                                    "sessionId": { "type": "string", "description": "Optional session ID for conversation memory" }
                                },
                                "required": ["input"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Agent execution result",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "output": {},
                                        "metadata": {
                                            "type": "object",
                                            "properties": {
                                                "tokensUsed": { "type": "integer" },
                                                "toolCalls": { "type": "array", "items": { "type": "object" } },
                                                "duration": { "type": "integer" },
                                                "sessionId": { "type": "string" },
                                                "messagesInSession": { "type": "integer" },
                                                "structuredOutputValid": { "type": "boolean" }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": { "description": "Agent not found" },
                    "500": { "description": "Internal server error" }
                }
            }
        },
        "/api/agents/{name}/stream": {
            "post": {
                "summary": "Stream Agent Execution",
                "tags": ["Agents"],
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "input": { "type": "object" },
                                    "sessionId": { "type": "string" }
                                },
                                "required": ["input"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Server-Sent Events stream",
                        "content": {
                            "text/event-stream": {
                                "schema": { "type": "string" }
                            }
                        }
                    }
                }
            }
        },
        "/api/agents/sessions/stats": {
            "get": {
                "summary": "Get Session Statistics",
                "tags": ["Agents"],
                "responses": {
                    "200": {
                        "description": "Session statistics",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "totalSessions": { "type": "integer" }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/agents/sessions/{sessionId}": {
            "get": {
                "summary": "Get Session Details",
                "tags": ["Agents"],
                "parameters": [
                    {
                        "name": "sessionId",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Session details",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "sessionId": { "type": "string" },
                                        "messageCount": { "type": "integer" },
                                        "messages": { "type": "array", "items": { "type": "object" } }
                                    }
                                }
                            }
                        }
                    },
                    "404": { "description": "Session not found" }
                }
            },
            "delete": {
                "summary": "Clear Session",
                "tags": ["Agents"],
                "parameters": [
                    {
                        "name": "sessionId",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Session cleared",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": { "type": "boolean" }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/workflows": {
            "get": {
                "summary": "List Workflows",
                "tags": ["Workflows"],
                "responses": {
                    "200": {
                        "description": "List of available workflows",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": { "type": "string" },
                                            "description": { "type": "string" },
                                            "version": { "type": "string" },
                                            "type": { "type": "string", "enum": ["steps", "react"] },
                                            "inputSchema": { "type": "object" }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/workflows/{name}": {
            "get": {
                "summary": "Get Workflow Details",
                "tags": ["Workflows"],
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Workflow details",
                        "content": {
                            "application/json": {
                                "schema": { "type": "object" }
                            }
                        }
                    },
                    "404": { "description": "Workflow not found" }
                }
            }
        },
        "/api/workflows/{name}/run": {
            "post": {
                "summary": "Run Workflow",
                "tags": ["Workflows"],
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "input": { "type": "object" }
                                },
                                "required": ["input"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Workflow execution result",
                        "content": {
                            "application/json": {
                                "schema": { "type": "object" }
                            }
                        }
                    },
                    "404": { "description": "Workflow not found" },
                    "500": { "description": "Internal server error" }
                }
            }
        },
        "/api/workflows/{name}/stream": {
            "post": {
                "summary": "Stream Workflow Execution",
                "tags": ["Workflows"],
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "input": { "type": "object" }
                                },
                                "required": ["input"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Server-Sent Events stream",
                        "content": {
                            "text/event-stream": {
                                "schema": { "type": "string" }
                            }
                        }
                    }
                }
            }
        },
        "/api/knowledge": {
            "get": {
                "summary": "List Knowledge Stores",
                "tags": ["Knowledge"],
                "responses": {
                    "200": {
                        "description": "List of available knowledge stores",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": { "type": "string" },
                                            "description": { "type": "string" },
                                            "kind": { "type": "string", "enum": ["vector", "graph-rag"] },
                                            "source": { "type": "string" },
                                            "store": { "type": "string" }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/knowledge/{name}": {
            "get": {
                "summary": "Get Knowledge Store Config",
                "tags": ["Knowledge"],
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Knowledge store configuration",
                        "content": {
                            "application/json": {
                                "schema": { "type": "object" }
                            }
                        }
                    },
                    "404": { "description": "Knowledge store not found" }
                }
            }
        },
        "/api/knowledge/{name}/search": {
            "post": {
                "summary": "Search Knowledge Store",
                "tags": ["Knowledge"],
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "query": { "type": "string" },
                                    "k": { "type": "integer", "default": 4 }
                                },
                                "required": ["query"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Search results",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "results": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "content": { "type": "string" },
                                                    "metadata": { "type": "object" },
                                                    "score": { "type": "number" }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": { "description": "Knowledge store not found" },
                    "500": { "description": "Internal server error" }
                }
            }
        },
        "/api/knowledge/{name}/refresh": {
            "post": {
                "summary": "Refresh Knowledge Store",
                "tags": ["Knowledge"],
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Refresh result",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": { "type": "boolean" }
                                    }
                                }
                            }
                        }
                    },
                    "500": { "description": "Internal server error" }
                }
            }
        },
        "/api/knowledge/{name}/add": {
            "post": {
                "summary": "Add Documents to Knowledge Store",
                "tags": ["Knowledge"],
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "documents": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "content": { "type": "string" },
                                                "metadata": { "type": "object" }
                                            },
                                            "required": ["content"]
                                        }
                                    }
                                },
                                "required": ["documents"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Addition result",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": { "type": "boolean" },
                                        "added": { "type": "integer" }
                                    }
                                }
                            }
                        }
                    },
                    "404": { "description": "Knowledge store not found" },
                    "500": { "description": "Internal server error" }
                }
            }
        },
        "/api/knowledge/{name}/entities": {
            "get": {
                "summary": "Get GraphRAG Entities",
                "description": "Returns entities extracted from a GraphRAG knowledge store.",
                "tags": ["Knowledge"],
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of entities",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": { "type": "string" },
                                            "type": { "type": "string" },
                                            "name": { "type": "string" },
                                            "description": { "type": "string" },
                                            "properties": { "type": "object" }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": { "description": "Knowledge store not found" }
                }
            }
        },
        "/api/knowledge/{name}/communities": {
            "get": {
                "summary": "Get GraphRAG Communities",
                "description": "Returns communities detected in a GraphRAG knowledge store.",
                "tags": ["Knowledge"],
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of communities",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": { "type": "string" },
                                            "nodeIds": { "type": "array", "items": { "type": "string" } },
                                            "summary": { "type": "string" },
                                            "title": { "type": "string" }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": { "description": "Knowledge store not found" }
                }
            }
        },
        "/api/knowledge/{name}/edges": {
