        "/api/files/read": {
            "get": {
                "summary": "Read File",
                "description": "Read file contents by path.",
                "tags": ["Files"],
                "parameters": [
                    {
                        "name": "path",
                        "in": "query",
                        "required": true,
                        "schema": { "type": "string" },
                        "description": "Relative file path"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "File contents",
                        "content": {
                            "application/json": {
