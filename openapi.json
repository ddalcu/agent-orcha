                                        "type": "object",
                                        "properties": {
                                            "id": { "type": "string" },
                                            "type": { "type": "string" },
                                            "sourceId": { "type": "string" },
                                            "targetId": { "type": "string" },
                                            "description": { "type": "string" },
                                            "weight": { "type": "number" }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": { "description": "Knowledge store not found" }
                }
            }
        },
